{
  "name": "haku-vue",
  "description": "基于Vue的前端框架haku-vue",
  "version": "1.0.0",
  "author": "hakubox <lidian_226@163.com>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --modern",
    "report": "vue-cli-service build --report",
    "lint": "vue-cli-service lint",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit",
    "buildapi": "cd cli | dotnet tools.dll",
    "assemblybuild": "npm run assemblybuild:untouched && npm run assemblybuild:optimized",
    "assemblybuild:untouched": "asc assembly/src/module.ts -t public/bin/module.untouched.wat -b public/bin/module.untouched.wasm --validate --sourceMap --measure",
    "assemblybuild:optimized": "asc assembly/src/module.ts -t public/bin/module.optimized.wat -b public/bin/module.optimized.wasm --validate --sourceMap --measure --optimize"
  },
  "dependencies": {
    "ant-design-vue": "^1.3.10",
    "dayjs": "^1.8.14",
    "register-service-worker": "^1.6.2",
    "vue": "^2.6.10",
    "vue-class-component": "^7.1.0",
    "vue-property-decorator": "^8.2.1",
    "vue-router": "^3.0.3",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.9.0",
    "@types/chai": "^4.1.0",
    "@types/mocha": "^5.2.4",
    "@vue/cli-plugin-babel": "^3.8.0",
    "@vue/cli-plugin-e2e-nightwatch": "^3.8.0",
    "@vue/cli-plugin-eslint": "^3.8.0",
    "@vue/cli-plugin-pwa": "^3.8.0",
    "@vue/cli-plugin-typescript": "^3.8.0",
    "@vue/cli-plugin-unit-mocha": "^3.8.0",
    "@vue/cli-service": "^3.8.4",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "assemblyscript": "AssemblyScript/assemblyscript",
    "axios": "^0.19.0",
    "babel-eslint": "^10.0.1",
    "base64-js": "^1.3.0",
    "chai": "^4.1.2",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "gulp": "^4.0.2",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^8.1.5",
    "lodash": "^4.17.11",
    "node-cmd": "^3.0.0",
    "qs": "^6.7.0",
    "sass": "^1.22.0",
    "sass-loader": "^7.1.0",
    "typescript": "^3.5.2",
    "vue-i18n": "^8.11.2",
    "vue-template-compiler": "^2.6.10",
    "vuex-class": "^0.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "ie > 11",
    "last 2 versions"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
